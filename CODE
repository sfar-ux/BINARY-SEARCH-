#include <stdio.h>
void main() {
    int a[] = {5, 9, 13, 15, 17, 18, 21};
    int lb = 0, ub = 6, mid, x;
    int found = 0;
    printf("Enter number to be found in {5, 9, 13, 15, 17, 18, 21}: ");
    scanf("%d", &x);
    while (lb <= ub) {
        mid = (lb + ub) / 2;

        if (a[mid] == x) {
            printf("Element %d found at index %d.\n", x, mid);
            found = 1;
            break;
        } else if (a[mid] > x) {
            ub = mid - 1;
        } else {
            lb = mid + 1;
        }
    }

    if (!found) {
        printf("Element %d not found in the array.\n", x);
    }
}
